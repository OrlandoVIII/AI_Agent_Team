# Project Configuration
PROJECT_NAME="FastAPI Backend"
VERSION="0.1.0"
DESCRIPTION="FastAPI Backend API"
API_V1_STR="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Environment
ENVIRONMENT="development"

# CORS Settings (comma-separated URLs)
ALLOWED_HOSTS="http://localhost:3000,http://localhost:8000"

# Database Configuration
POSTGRES_DB="fastapi_db"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
DATABASE_URL="postgresql+asyncpg://postgres:postgres@db:5432/fastapi_db"
DATABASE_ECHO=false

# Security Settings (IMPORTANT: Change SECRET_KEY in production)
SECRET_KEY="change-me-in-production-must-be-32-chars-minimum"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30