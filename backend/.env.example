# Project Settings
PROJECT_NAME=FastAPI Backend
VERSION=0.1.0
DESCRIPTION=FastAPI Backend API

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings (comma-separated list)
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/fastapi_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_CONNECT_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5
POOL_TIMEOUT=20
POOL_RECYCLE=3600

# PostgreSQL Settings (for docker-compose)
POSTGRES_DB=fastapi_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Security Settings
SECRET_KEY=your-secret-key-must-be-at-least-32-characters-long-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false