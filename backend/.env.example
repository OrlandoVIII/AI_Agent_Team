# Application Configuration
PROJECT_NAME=FastAPI Backend
VERSION=0.1.0
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/fastapi_db
DATABASE_ECHO=false

# PostgreSQL Docker Configuration
POSTGRES_DB=fastapi_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Security Configuration
SECRET_KEY=change-me-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000

# JWT Configuration (legacy - remove if not used)
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-characters-long